<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_dialog"
        android:id="@+id/layout_dialog2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:id="@+id/txt8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:text="Xác nhận email"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_email_dialog"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/txt8"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            android:textSize="16sp"
            android:hint="Nhập email..."
            android:background="@drawable/shape_bgr_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/bt_cf_dialog"
        android:textSize="16sp"
        android:text="Xác nhận"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/layout_dialog2"
        app:layout_constraintTop_toBottomOf="@id/layout_dialog2"
        android:layout_width="150dp"
        android:layout_height="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>